<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>loginaction</servlet-name>
        <servlet-class>com.ani.loginaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>get_value_servlet</servlet-name>
        <servlet-class>com.ani.get_value_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockDownloader_Servlet</servlet-name>
        <servlet-class>com.ani.StockDownloader_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>stockPurchase_Servlet</servlet-name>
        <servlet-class>com.ani.stockPurchase_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>stock_updater</servlet-name>
        <servlet-class>com.ani.stock_updater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>stock_seller</servlet-name>
        <servlet-class>com.ani.stock_seller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginaction</servlet-name>
        <url-pattern>/loginaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get_value_servlet</servlet-name>
        <url-pattern>/get_value_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockDownloader_Servlet</servlet-name>
        <url-pattern>/StockDownloader_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stockPurchase_Servlet</servlet-name>
        <url-pattern>/stockPurchase_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stock_updater</servlet-name>
        <url-pattern>/stock_updater</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stock_seller</servlet-name>
        <url-pattern>/stock_seller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
